<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="7.1.1" author="Material">
        <createTable tableName="structured_form">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="pk_structured_form"/>
            </column>
            <column name="form_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="TEXT"/>
            <column name="status" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="7.1.2" author="Material">
        <createTable tableName="structured_form_change_history">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="pk_structured_form_change_history"/>
            </column>
            <column name="structured_form_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_structured_form_change_history_structured_form_id"
                             referencedTableName="structured_form"
                             referencedColumnNames="id"/>
            </column>
            <column name="form_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="material_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="idx_structured_form_change_history_structured_form_id" tableName="structured_form_change_history">
            <column name="structured_form_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
