{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/pet-form-finalised.json",
  "type": "object",
  "properties": {
    "petId": {
      "description": "Pet Id",
      "$ref": "http://justice.gov.uk/json/schemas/material/data-types.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/json/schemas/material/data-types.json#/definitions/uuid"
    },
    "updatedBy": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "id",
            "firstName",
            "lastName"
          ]
        },
        {
          "required": [
            "name"
          ]
        }
      ]
    },
    "materialId": {
      "description": "Material Id",
      "$ref": "http://justice.gov.uk/json/schemas/material/data-types.json#/definitions/uuid"
    }
  },
  "required": [
    "caseId",
    "petId",
    "updatedBy",
    "materialId"
  ],
  "additionalProperties": false
}
