{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/material/updated-by.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "name": {
      "type": "string"
    }
  },
  "oneOf": [
    {
      "required": [
        "id",
        "firstName",
        "lastName"
      ]
    },
    {
      "required": [
        "name"
      ]
    }
  ],
  "additionalProperties": false
}




