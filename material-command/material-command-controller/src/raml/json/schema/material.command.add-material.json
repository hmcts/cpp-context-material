{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "materialId": {
      "type": "string"
    },
    "document": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "content": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["content"]
        },
        {
          "properties": {
            "externalLink": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["externalLink"]
        }
      ]
    },
    "fileName": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [ "materialId", "document", "fileName"]


}